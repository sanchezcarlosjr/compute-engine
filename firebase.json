{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ {
    	"source": "**/*.@(wasm)",
    	"headers": [ {
      		"key": "Content-Type",
      		"value": "application/wasm"
    		} 
	]
  	} 
    ]
  }
}
